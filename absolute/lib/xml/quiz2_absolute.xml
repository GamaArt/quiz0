        <question id="q2" time="15" event="">

    		<text id="question2" x="50" y="100" height="" width="370" anim="show" animtime="1" animdelay="0"><![CDATA[<p class="white">Second question.</p><p class="white">Select your answer then Confirm.</p>]]></text>
			
			<!--option 1-->
			<option correct="true">
				<text id="option1" x="50" y="260" height="" width="330" anim="left" animtime="0.5" animdelay="1.1" ease="Regular.easeOut" event="option" className="optionBox"><![CDATA[<p class="white">Option 1 (correct)</p>]]></text>
